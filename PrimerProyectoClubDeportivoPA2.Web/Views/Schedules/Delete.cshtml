@model PrimerProyectoClubDeportivoPA2.Web.Data.Entities.Schedule

@{
    ViewData["Title"] = "Eliminar Horario";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de eliminar esto?</h3>
<div>
    <h4>Horario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartingHour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartingHour)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FinishingHour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinishingHour)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-info">Regresar a la lista</a>
    </form>
</div>
