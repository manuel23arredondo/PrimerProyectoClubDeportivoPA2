@model IEnumerable<PrimerProyectoClubDeportivoPA2.Web.Data.Entities.Agenda>

@{
    ViewData["Title"] = "Agenda";
}

<h1>Agenda</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Agenda</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingSession)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingSession)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Detalles</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
